target_path="/home/tvt/www/"

current_path=$(pwd)

#
if [[ "$current_path" == "$target_path"* ]]; then
    echo "当前目录 is $current_path"
    echo "www 环境更新"
else
    cd "$target_path"
    echo "www 环境更新, 当前目录 /home/tvt/www/"
fi

